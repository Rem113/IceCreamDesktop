<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:Controls="clr-namespace:IceCreamDesktop.Presentation.Views.Controls"
	         x:Class="IceCreamDesktop.Presentation.Views.Pages.ProductListPage"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1200">

	<Grid>
		<ItemsControl ItemsSource="{Binding IceCreams}">
			<ItemsControl.ItemTemplate>
				<ItemContainerTemplate>
					<Controls:ProductListItemControl />
				</ItemContainerTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Grid>
</UserControl>